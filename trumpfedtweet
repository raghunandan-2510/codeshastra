# Function to extract tweets 
def get_tweets(Mr_sarcastastic): 
          
        # Authorization to consumer key and consumer secret 
        auth = tweepy.OAuthHandler(consumer_key, consumer_secret) 
  
        # Access to user's access key and access secret 
        auth.set_access_token(access_key, access_secret) 
  
        # Calling api 
        api = tweepy.API(auth) 
  
        # 20 tweets to be extracted 
        number_of_tweets=20
        tweets = api.user_timeline(screen_name=Mr_sarcastastic) 
  
        # Empty Array 
        tmp=[]  
  
        # create array of tweet information: username,  
        # tweet id, date/time, text 
        #search tweets related to fed
        search = tweepy.Cursor(api.search, q="from:@realDonaldTrump The Fed", lang="en").items()
        tweets_for_csv = [[tweet.text.encode("utf-8")] for tweet in search] # CSV file created  
        print ("writing to {0}_tweets.csv".format(Mr_sarcastastic))
        with open("{0}_tweets.csv".format(Mr_sarcastastic) , 'w+') as file:
                writer = csv.writer(file, delimiter='|')
                writer.writerows(tweets_for_csv)
  
  
# Driver code 
if __name__ == '__main__': 
  
    # Here goes the twitter handle for the user 
    # whose tweets are to be extracted. 
    get_tweets("@realDonaldTrump") 
